<?xml version="1.0" encoding="utf-8"?>
<com.fei.slidemenu.SlideMenu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    app:rightPadding="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!-- 菜单布局-->
        <include layout="@layout/layout_main_menu" />

        <!-- 内容布局 -->
        <include layout="@layout/layout_main_content" />
    </LinearLayout>
</com.fei.slidemenu.SlideMenu>
